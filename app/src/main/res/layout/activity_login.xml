<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mz.gerasoft.regulador_rodovia.login"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.54"
        android:adjustViewBounds="false"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@mipmap/inatter" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:srcCompat="@mipmap/user" />

    <EditText
        android:id="@+id/codigoAgente"
        android:layout_width="284dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/codigo"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/senhaAgente"
        android:layout_width="304dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textAlignment="center"
        android:hint="@string/senha"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btniniciar"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:onClick="onLogin"
        android:text="@string/entrar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:clickable="true"
        android:gravity="center"
        android:linksClickable="true"
        android:text="@string/Esqueci"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.07"
        android:background="#2F4F4F"
        android:textAlignment="center"
        android:textSize="12dp"
        android:text="Todos direitos reservados Â©" />
</LinearLayout>
